.wiki-header {
  position: sticky;
  top: 0;
  z-index: 1000;

  .logo-icon {
    margin-right: 12px;
    font-size: 32px;
    width: 32px;
    height: 32px;
  }

  .spacer {
    flex: 1 1 auto;
  }
}

.wiki-sidenav {
  width: 300px;

  mat-nav-list {
    mat-list-item {
      margin: 4px 0;

      &.active {
        background-color: color-mix(
          in srgb,
          var(--mat-sys-tertiary-container) 50%,
          transparent
        );
        mat-icon {
          color: var(--mat-sys-on-tertiary-container);
        }

        span {
          font-weight: 500;
        }
      }
    }
  }
}

.content-section {
  padding: 0 24px;

  .section-title {
    font: var(--mat-sys-headline-large);
    margin-top: 16px;
  }

  mat-divider {
    margin-bottom: 32px;
  }
}

.info-card {
  margin-bottom: 24px;

  mat-card-content {
    p {
      line-height: 1.6;
      margin-bottom: 16px;
    }
  }
}

.oath {
  padding: 24px;
  border-radius: 4px;
  margin: 16px 0;

  p {
    margin: 8px 0;
    font-size: 1.1rem;
    text-align: center;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  }
}

mat-chip-set {
  margin: 16px 0;

  mat-chip {
    margin: 4px;
    background-color: var(--mat-sys-primary-container);
    color: var(--mat-sys-on-primary-container);
  }
}
